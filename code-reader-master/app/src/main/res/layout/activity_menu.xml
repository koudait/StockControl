<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e3e1"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_unplanned_store"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock"
                android:text="@string/func_name_unplanned_store" />

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:id="@+id/button4"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stock_search"
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock"
                android:text="@string/func_name_stock_search" />

            <Button
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

            <Button
                android:layout_width="@dimen/top_menu_icon_size"
                android:layout_height="@dimen/top_menu_icon_size"
                android:background="@drawable/top_menu_icon_stock" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>


