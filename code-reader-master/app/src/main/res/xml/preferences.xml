<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preference_category_settings"
        >
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:enableCopying="true"
            app:iconSpaceReserved="false"
            app:key="VIBRATE_BOOLEAN"
            app:summaryOff="@string/preference_summary_darkmode_off"
            app:summaryOn="@string/preference_summary_darkmode_on"
            app:title="@string/preference_title_darkmode"
            />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preference_category_information"
        >
        <Preference
            app:enableCopying="true"
            app:iconSpaceReserved="false"
            app:key="VERSION"
            app:persistent="false"
            app:title="@string/preference_title_version"
            />
    </PreferenceCategory>
</PreferenceScreen>
